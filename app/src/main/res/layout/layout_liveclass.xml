        <ImageView  android:visibility="gone"
            android:id="@+id/ivNoDataFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_23sdp"
            android:src="@drawable/ic_no_data_found"/>

    </LinearLayout>
</layout>