<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ui.account.AccountFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:visibility="visible"
       android:id="@+id/llStudentDetailsLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="match_parent"
           android:layout_height="@dimen/_30sdp"
           android:text="@string/account"
           android:gravity="center"
           android:textColor="@color/white"
           android:textSize="@dimen/text_size"
           android:background="@color/colorPrimaryDark"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_13sdp">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/ivProfileImage"
               android:layout_width="@dimen/_50sdp"
               android:layout_height="@dimen/_50sdp"
               app:civ_border_width="0dp"
               android:layout_marginLeft="@dimen/_11sdp"
               app:civ_border_color="@color/transparent"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/_11sdp"
               android:layout_toRightOf="@+id/ivProfileImage">

               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/tvName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorText"
                   android:textSize="@dimen/text_size"
                   android:text="Name - Avik Mondal"/>

               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/tvClass"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorText"
                   android:textSize="@dimen/text_size"
                   android:layout_marginTop="@dimen/_6sdp"
                   android:text="Class - VII A"/>
           </LinearLayout>
       </RelativeLayout>

       <!--////////////////// Personal Info ////////////////-->

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/_13sdp"
           android:layout_marginRight="@dimen/_13sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/_11sdp"
               android:background="@drawable/rounded_corner_grey">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_23sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/gender"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvGender"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/father_s_name"
                       tools:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/date_of_birth"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvDob"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/father_s_name"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvFatherName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/mother_s_name"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvMotherName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/email_id"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvEmailId"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/contact_info"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvContactNo"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp"
                   android:layout_marginBottom="@dimen/_13sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/address"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvPermanentAddress"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/permanent_address"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="false"/>

               </LinearLayout>

               <LinearLayout
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp"
                   android:layout_marginBottom="@dimen/_13sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/secondary_address"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvSeconderyAddress"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/permanent_address"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="false"/>

               </LinearLayout>

           </LinearLayout>

           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/personal_information"
               android:textColor="@color/white"
               android:paddingRight="@dimen/_11sdp"
               android:paddingLeft="@dimen/_11sdp"
               android:paddingTop="@dimen/_3sdp"
               android:paddingBottom="@dimen/_3sdp"
               android:layout_marginLeft="@dimen/_16sdp"
               android:fontFamily="@font/lato"
               android:gravity="center"
               android:background="@drawable/rounded_corner_blue_sml"/>

       </RelativeLayout>

       <!--////////////////// Acadamic Info ////////////////-->

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_13sdp"
           android:layout_marginLeft="@dimen/_13sdp"
           android:layout_marginRight="@dimen/_13sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/_11sdp"
               android:background="@drawable/rounded_corner_grey">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_23sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/school_name"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvSchoolName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Class Teacher - "
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvClassTeacher"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/date_of_joining_in_school"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvDateOfJoining"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/attendance_of_this_season"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvAttendance"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_3sdp">
                   <ProgressBar
                       android:id="@+id/pbAttendance"
                       style="?android:attr/progressBarStyleHorizontal"
                       android:layout_width="@dimen/_200sdp"
                       android:layout_height="wrap_content"
                       android:indeterminate="false"
                       android:max="100"
                       android:progressTint="@color/colorGreen"
                       android:layout_marginTop="@dimen/_3sdp"
                       android:layout_gravity="center_vertical"
                       android:progress="50" />

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvAttendancePercentage"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/lato"
                       android:textSize="@dimen/text_size"
                       android:textColor="@color/colorTextDark"
                       android:layout_marginLeft="@dimen/_9sdp"
                       android:text="50%"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/avarage_performance"
                       android:textColor="@color/colorText"
                       android:fontFamily="@font/lato_bold"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvAvaragePerfomance"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="@string/father_s_name"
                       android:textColor="@color/colorTextGrey"
                       android:fontFamily="@font/lato"
                       android:layout_marginLeft="@dimen/_6sdp"
                       android:textSize="@dimen/text_size"
                       android:singleLine="true"/>

               </LinearLayout>

               <androidx.appcompat.widget.AppCompatRatingBar
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/imageRatingBar"
                   android:stepSize="1"
                   android:numStars="5"
                   android:layout_marginLeft="@dimen/_13sdp"
                   android:layout_marginRight="@dimen/_9sdp"
                   android:layout_marginTop="@dimen/_6sdp"
                   android:layout_marginBottom="@dimen/_13sdp"/>

           </LinearLayout>

           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/academic_information"
               android:textColor="@color/white"
               android:paddingRight="@dimen/_11sdp"
               android:paddingLeft="@dimen/_11sdp"
               android:paddingTop="@dimen/_3sdp"
               android:paddingBottom="@dimen/_3sdp"
               android:layout_marginLeft="@dimen/_16sdp"
               android:fontFamily="@font/lato"
               android:gravity="center"
               android:background="@drawable/rounded_corner_blue_sml"/>

       </RelativeLayout>

       <!--////////////////// Exam ////////////////-->

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_13sdp"
           android:layout_marginLeft="@dimen/_13sdp"
           android:layout_marginRight="@dimen/_13sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/_11sdp"
               android:background="@drawable/rounded_corner_grey">
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rvExam"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="@dimen/_13sdp"/>

           </LinearLayout>

           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/exams"
               android:textColor="@color/white"
               android:paddingRight="@dimen/_11sdp"
               android:paddingLeft="@dimen/_11sdp"
               android:paddingTop="@dimen/_3sdp"
               android:paddingBottom="@dimen/_3sdp"
               android:layout_marginLeft="@dimen/_16sdp"
               android:fontFamily="@font/lato"
               android:gravity="center"
               android:background="@drawable/rounded_corner_blue_sml"/>

       </RelativeLayout>

       <!--////////////////// achievement ////////////////-->

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_13sdp"
           android:layout_marginLeft="@dimen/_13sdp"
           android:layout_marginRight="@dimen/_13sdp">

           <LinearLayout
               android:id="@+id/llHobiesLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/_29sdp"
               android:layout_marginBottom="@dimen/_33sdp"
               android:background="@drawable/rounded_corner_grey">

           </LinearLayout>

           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/achievement"
               android:textColor="@color/white"
               android:paddingRight="@dimen/_11sdp"
               android:paddingLeft="@dimen/_11sdp"
               android:paddingTop="@dimen/_3sdp"
               android:paddingBottom="@dimen/_3sdp"
               android:layout_marginLeft="@dimen/_16sdp"
               android:fontFamily="@font/lato"
               android:gravity="center"
               android:background="@drawable/rounded_corner_blue_sml"/>

       </RelativeLayout>

   </LinearLayout>

</ScrollView>

</LinearLayout>
</layout>