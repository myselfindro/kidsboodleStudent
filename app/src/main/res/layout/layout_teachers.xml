<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvMainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_13sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfImg"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/transparent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivProfImg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_11sdp"
                android:fontFamily="@font/lato"
                android:text="@string/teacher"
                android:textSize="@dimen/text_size_med"
                android:textColor="@color/colorText"/>

            <ImageView
                android:id="@+id/ivCollapseExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_11sdp"/>

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llTeachersDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:text="@string/subject"
            android:textSize="@dimen/text_size"
            android:fontFamily="@font/lato"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_sub_tech"
            android:drawablePadding="@dimen/_6sdp"
            android:textColor="@color/colorText"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:text="@string/email_id"
            android:textSize="@dimen/text_size"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/lato"
            android:textColor="@color/colorText"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvContactNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:text="@string/contact_info"
                android:textSize="@dimen/text_size"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_contact"
                android:drawablePadding="@dimen/_6sdp"
                android:fontFamily="@font/lato"
                android:textColor="@color/colorText"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>